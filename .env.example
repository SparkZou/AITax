# Environment Configuration for AITax

## Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=aitax_db
DB_USER=your_db_username
DB_PASSWORD=your_db_password

## API Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

## Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

## OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

## Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=AITax NZ <noreply@aitax.co.nz>

## Bank Integration APIs (Enterprise Feature)
# ANZ Bank API
ANZ_API_KEY=your-anz-api-key
ANZ_API_SECRET=your-anz-api-secret
ANZ_API_BASE_URL=https://api.anz.co.nz

# ASB Bank API
ASB_API_KEY=your-asb-api-key
ASB_API_SECRET=your-asb-api-secret

# BNZ Bank API
BNZ_API_KEY=your-bnz-api-key
BNZ_API_SECRET=your-bnz-api-secret

## IRD Integration (Enterprise Feature)
IRD_API_KEY=your-ird-api-key
IRD_API_SECRET=your-ird-api-secret
IRD_API_BASE_URL=https://api.ird.govt.nz
IRD_TESTING_MODE=true

## Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_NAME=AITax NZ
VITE_APP_VERSION=1.0.0

## Feature Flags
ENABLE_AI_CLASSIFICATION=true
ENABLE_CHATBOT=true
ENABLE_BANK_INTEGRATION=true
ENABLE_IRD_INTEGRATION=true

## File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.csv,.pdf,.xlsx

## Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

## Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_TIMEOUT=3600000

## Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

## Stripe Payment (for subscription management)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Pricing IDs
STRIPE_PRICE_ID_FREE=price_free
STRIPE_PRICE_ID_LITE=price_lite
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise
